<!DOCTYPE html>
<html>

<head>
	<title><%= title %></title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
	<div class="pb-12 content-center">
		<div class="flex bg-white border-b border-gray-200 fixed top-0 inset-x-0 z-100 h-20 items-center">
			<div class="w-full max-w-screen-xl relative mx-auto">
				<div class="flex items-center">
					<img src="//s3.amazonaws.com/cdn.cloud66.com/images/cloud66_logo_bordered.svg" width="80px" />
					<h1 class="text-2xl pl-2 pb-2">Application Metadata</h1>
				</div>
			</div>
		</div>

		<!-- annotations -->
		<div class="w-full max-w-screen-xl mx-auto">
			<div id="content-wrapper" class="min-h-screen w-full lg:static lg:max-h-full lg:overflow-visible lg:w-3/4 xl:w-4/5">
				<div class="flex">
					<div class="pt-24 pb-4 w-full">
						<h1 class="text-lg font-light">Annotations</h1>
					</div>
				</div>
				<table class="w-full">
					<thead>
						<tr>
							<th class="w-1/2 px-4 py-2 text-base font-semibold text-gray-700 bg-gray-100">Key</th>
							<th class="w-1/2 px-4 py-2 text-base font-semibold text-gray-700 bg-gray-100">Value</th>
						</tr>
					</thead>
					<tbody>
						<% var i; for (i = 0; i < annotations.length; i++) { %>
						<tr>
							<td class="px-4 py-2 border-t border-gray-300 font-mono text-base text-purple-700 whitespace-no-wrap"><%= annotations[i].name %></td>
							<td class="px-4 py-2 border-t border-gray-300 font-mono text-base text-purple-700 whitespace-no-wrap"><%= annotations[i].value %></td>
						</tr>
						<% } %>
					</tbody>
				</table>
				<!-- lables -->
				<div class="flex">
					<div class="pt-24 pb-4 w-full">
						<h1 class="text-lg font-light">Labels</h1>
					</div>
				</div>

				<table class="w-full">
					<thead>
						<tr>
							<th class="w-1/2 px-4 py-2 text-base font-semibold text-gray-700 bg-gray-100">Key</th>
							<th class="w-1/2 px-4 py-2 text-base font-semibold text-gray-700 bg-gray-100">Value</th>
						</tr>
					</thead>
					<tbody>
						<% var i; for (i = 0; i < labels.length; i++) { %>
						<tr>
							<td class="px-4 py-2 border-t border-gray-300 font-mono text-base text-purple-700 whitespace-no-wrap"><%= labels[i].name %></td>
							<td class="px-4 py-2 border-t border-gray-300 font-mono text-base text-purple-700 whitespace-no-wrap"><%= labels[i].value %></td>
						</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

</body>

</html>
